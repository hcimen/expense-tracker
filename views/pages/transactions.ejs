<%- include('../partials/header') -%>

<%- include('../partials/navigation') -%>

<div class="addTransaction" id="addTransactionMain"> All Transactions <br>



	<div >
		<form action="#">
			<table style="width:100%; font-size: large; border: solid; border-color:var(--caribbean-current); text-align: center;">
				<tr>
					<th> Date</th>
					<th> Description </th>
					<th> Amount</th>
					<th> Type</th>
					<th> Category </th>
					<th> Account Name </th>
					<th> Labels </th>
					<th> Notes </th>
				</tr>
				<% for (entry of allTransactions) { %>
				<tr style="border: 1px solid black;">
					<td> <%= entry.date.toLocaleDateString() %> </td>
					<td> <%= entry.description %> </td>
					<td> <%= entry.amount %> </td>
					<td> <%= entry.transaction_type %> </td>
					<td> <%= entry.category %> </td>
					<td> <%= entry.account_name %> </td>
					<td> <%= entry.labels %> </td>
					<td> <%= entry.notes %> </td>
				</tr>
				<% } %>	
			</table>
		</form>
	</div>

</div>

<%- include('../partials/footer') -%>